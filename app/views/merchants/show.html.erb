<%n = 1%> 
<%@items.each do |item| %>
<div id="item_<%=n%>">

Name: 
  <div id="name">
    <%=link_to item.name, "/items/#{item.id}"%>
  </div>

Description:
  <div id="description">
    <%=item.description%>
  </div>

Unit Price: 
  <div id="unit_price">
    <%=item.unit_price%>
  </div>
</div>
<br>
<br>
<br>
<br>

  <%n = n + 1%>
<%end%>