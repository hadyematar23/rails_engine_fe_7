<h1>Welcome</h1>


<h4>Search for Merchant by fragment</h4>

<%= form_with url: "/find_merchants", method: :get, local: true do |form| %>
  <div class="form-group">
    <%= form.label :search_term, "Search for Merchant by fragment" %>
    <%= form.text_field :search_term, class: "form-control" %>
  </div>
  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>
